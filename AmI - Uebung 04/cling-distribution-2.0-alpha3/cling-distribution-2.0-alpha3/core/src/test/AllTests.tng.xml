<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cling Core - All Tests" parallel="false" thread-count="1" verbose="1">

    <test name="Service">
        <packages>
            <package name="org.fourthline.cling.test.service"/>
        </packages>
    </test>

    <test name="Model">
        <packages>
            <package name="org.fourthline.cling.test.model"/>
            <package name="org.fourthline.cling.test.model.profile"/>
        </packages>
    </test>

    <test name="Local">
        <packages>
            <package name="org.fourthline.cling.test.local"/>
        </packages>
    </test>

    <test name="SSDP">
        <packages>
            <package name="org.fourthline.cling.test.ssdp"/>
        </packages>
    </test>

    <test name="Description">
        <packages>
            <package name="org.fourthline.cling.test.resources"/>
        </packages>
    </test>

    <test name="Control">
        <packages>
            <package name="org.fourthline.cling.test.control"/>
        </packages>
    </test>

    <test name="GENA">
        <packages>
            <package name="org.fourthline.cling.test.gena"/>
        </packages>
    </test>

    <test name="Protocol">
        <packages>
            <package name="org.fourthline.cling.test.protocol"/>
        </packages>
    </test>

    <test name="Examples">
        <packages>
            <package name="example.binarylight"/>
            <package name="example.controlpoint"/>
            <package name="example.registry"/>
            <package name="example.localservice"/>
        </packages>
    </test>

    <!--
    These tests are multi-threaded and seem to fail on some machines, there are
    timing issues. Until we have figured out a way to reproduce this reliably, we
    only run the tests if -DtestClingTransport=true was specified.
    -->
    <test name="Transport">
        <method-selectors>
            <method-selector>
                <script language="beanshell">
                    "true".equals(System.getProperty("testClingTransport"))
                </script>
            </method-selector>
        </method-selectors>
        <packages>
            <package name="org.fourthline.cling.test.transport"/>
        </packages>
    </test>

</suite>
