<root xmlns="urn:schemas-upnp-org:device-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <URLBase>http://127.0.0.1:0</URLBase> <!-- No path -->
    <device>
        <deviceType>urn:schemas-upnp-org:device:mydevice:1</deviceType>
        <friendlyName>My Testdevice</friendlyName>
