<div class="modal fade" id="rule-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Informationen</h4>
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="form-group">
            <label>Name: <%= rule.name %></label>
          </div>
          <div class="form-group">
            <label>Priority: <%= rule.priority.value.to_s %></label>
          </div>
          <div class="form-group">
            <table class="table">
              <caption>Conditions</caption>
              <thead>
                <tr class="warning">
                    <th>Resource</th>
                    <th>Operator</th>
                    <th>Value</th>
                </tr>
              </thead>
                <tbody>
                  <% rule.conditions.each do |c| %>
                    <tr class="warning">
                      <td><%= c.resource.name %></td>
                      <td><%= c.operator %></td>
                      <td><%= c.value %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          </div>

          <div class="form-group">
            <table class="table">
              <caption>Actions</caption>
              <thead>
                <tr class="success">
                  <th>Resource</th>
                  <th>Wert</th>
                </tr>
              </thead>
              <tbody>
                <% rule.activities.each do |a| %>
                  <tr class="success">
                    <td><%= a.actor.name %></td>
                    <td><%= a.value %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>